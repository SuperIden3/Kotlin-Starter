{
    // These tasks will run in order when initializing your CodeSandbox project.
    "setupTasks": [
      {
        "name": "Check Versions",
        "command": "kotlin -version"
      },
      {
        "name": "Update Packages",
        "command": "yarn install\nsudo apt update\nsudo apt-get install kotlin"
      }
    ],
  
    // These tasks can be run from CodeSandbox. Running one will open a log in the app.
    "tasks": {
      "check": {
        "name": "check",
        "command": "yarn run check",
        "runAtStart": true
      },
      "update": {
        "name": "update",
        "command": "yarn run update",
        "runAtStart": true
      },
      "start": {
        "name": "start",
        "command": "yarn start",
        "runAtStart": false
      },
    }
  }